{% set download=os.path.join(profile_dir, '..', '..', '..', '..') %}
{% set toolchain=os.path.join(download, 'xpack-riscv-none-elf-gcc-12.2.0-3') %}
{% set target_host='riscv-none-elf' %}

[env]
CONAN_CMAKE_FIND_ROOT_PATH={{ toolchain }}/{{ target_host }}
CONAN_CMAKE_SYSTEM_PROCESSOR=riscv
CHOST={{ target_host }}
AR={{ toolchain }}/bin/{{ target_host-ar }}
AS={{ toolchain }}/bin/{{ target_host-as }}
RANLIB=$target_host-ranlib
CC=$toolchain/bin/$target_host-$cc_compiler
CXX=$toolchain/bin/$target_host-$cxx_compiler
STRIP=$toolchain/bin/$target_host-strip
RC=$toolchain/bin/$target_host-windres

[settings]
os=Generic
arch=riscv
compiler=gcc
build_type=Release
compiler.cppstd=20
compiler.libcxx=libstdc++11
compiler.version=12
